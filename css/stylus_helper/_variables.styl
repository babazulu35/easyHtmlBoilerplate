/**
* Convert Pixel To Percentage etc. (12px / 1170px) * 100 = 1,0256 %
* 12 pixels occupied 1,0256 percent space of 1170 px sized Box or container
*/
px_to_per(value,container-size)
	return unit((value / container-size) * 100,'%')

/**
* Calculating 1 div size 
*/
calc_div_size(total-column,margin-percent)
	$total-div = total-column - 1
	$total-margin-percent = $total-div * margin-percent
	$one-div-size = (100 - $total-margin-percent ) / total-column
	return $one-div-size
/**
* Convert Px to Rem
*/	

px_to_rem(value)
	font-size value	
	if(value is inherit)
	{
		/* Dont Do Anything */
	}
	else
	{
		font-size remify(value)	
	}

remify(value){
	u = unit(value)
	
	if(u is 'px'){
		return unit(value/16,'rem')
	}
	else
	{
		return unit(value,u)
	}
